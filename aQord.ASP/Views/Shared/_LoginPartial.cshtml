@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            
            @if (true)
            {
                string userName = User.Identity.GetUserName();
                string trimUserName = userName.Substring(0, userName.LastIndexOf("@"));

                @Html.ActionLink("Hej " + $"{trimUserName}" + "!", "Index", "Manage", routeValues: null, htmlAttributes: new {title = "Manage"})

            }

        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav" id="navbarNav">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class= "sr-only(current) nav-link" })</li>
        <li>@Html.ActionLink("Log ind", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class= "sr-only(current) nav-link" })</li>
    </ul>
}
