@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    {

    <script type="text/javascript">
        function Action(code) {
            $.ajax({
                url: '@Url.Action("Action", "Schematics")',
                type: "POST",
                data: { "code": code },
                "success": function (data) {
                    if (data != null) {
                        var vdata = data;
                        $("#TypeOfWork").val(vdata[0].TypeOfWork);
                        $("#StaffRepresentative").val(vdata[0].StaffRepresentative);
                        $("#Year").val(vdata[0].Year);
                        $("#Firm").val(vdata[0].Firm);
                        $("#WorkplaceAddress").val(vdata[0].WorkplaceAddress);
                    }
                }
            });
        }
    </script>

    }
}


