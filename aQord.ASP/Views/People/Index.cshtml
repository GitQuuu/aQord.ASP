@using System.Web.UI.WebControls
@using aQord.ASP.Models
@model IEnumerable<aQord.ASP.Models.Person>


@{
    ViewBag.Title = "Index";
}

<br/>


<p>
    @Html.ActionLink("Tilføj ny", "New", "People", new { @class = "btn btn-primary" })


    @using (Html.BeginForm("Index", "People", FormMethod.Get, new { @class = "form-inline my-2 my-lg-0" }))
    {
        <p data-toggle="tooltip" title="Brug , for at søge efter flere kriterier">

            @Html.TextBox("filterString", null, new { @class = "form-control mr-sm-2", @placeholder = "Søg" })

            <input type="submit" value="Filtre" class="btn btn-secondary my-2 my-sm-0" />
        </p>
    }
</p>

<div class="table-responsive-sm">
    <table class="table table-striped table-hover" >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CellphoneNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OccupationalStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalaryPrHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeeklyWorkingHours)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CellphoneNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OccupationalStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalaryPrHour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WeeklyWorkingHours)
                </td>
                <td>
                    @Html.ActionLink("Redigere", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-success" })
                    @Html.ActionLink("Detalje", "Details", new { id = item.Id }, new { @class = "btn btn-outline-info" })
                    @Html.ActionLink("Slet", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
        }

    </table>
</div>
    
